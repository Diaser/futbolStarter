<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InitActivity">

    <ImageView
        android:id="@+id/imageViewSlide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvSlideHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="TextView"
        android:textColor="@color/textColorDark"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSlide"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSlide"
        app:layout_constraintStart_toStartOf="@+id/imageViewSlide"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvSlideDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="101dp"
        android:text="TextView"
        android:textColor="@color/textColorLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSlide"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvPointMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="."
        android:textColor="@color/colorTransparenteWhite"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="."
        android:textColor="@color/colorTransparenteWhite"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPointMiddle"
        app:layout_constraintStart_toEndOf="@+id/tvPointMiddle"
        app:layout_constraintTop_toTopOf="@+id/tvPointMiddle" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="."
        android:textColor="@color/colorTransparenteWhite"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPointMiddle"
        app:layout_constraintEnd_toStartOf="@+id/tvPointMiddle"
        app:layout_constraintTop_toTopOf="@+id/tvPointMiddle"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>